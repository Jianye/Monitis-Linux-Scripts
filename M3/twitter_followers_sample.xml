<?xml version="1.0"?>
<config>
	<apicredentials apikey="XXX" secretkey="XXX"/>
	<agent name="Twitter monitor" interval="5">
		<monitor name="Twitter">
			<url>http://api.twitter.com/1/users/show.json?screen_name=monitis</url>
			<metric name="Followers">
				<type>integer</type>
				<uom>nr</uom>
				<json>{'followers_count'}</json>
			</metric>
		</monitor>
	</agent>
</config>
